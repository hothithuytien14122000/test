@model SV18T1021314.DomainModel.Shipper
@{

}

<div class="box box-primary">
    <div class="box-header with-border">
    </div>
    <div class=" box-body">
        <form class="form-horizontal" action="~/Shipper/save" method="post">
            <input type="hidden" name="ShipperID" value="@Model.ShipperID" />
            <div class="form-group">
                <label class="control-label col-sm-2">Tên người giao hàng:</label>
                <div class="col-sm-10">
                    @* <input type="text"
        class="form-control"
        id="ShipperName"
        name="ShipperName"
        placeholder="" autofocus value="@Model.ShipperName">*@
                    @Html.TextBoxFor(m => m.ShipperName, new { @class = "form-control" })
                    @Html.ValidationMessage("ShipperName")
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Số điện thoại:</label>
                <div class="col-sm-10">
                    @* <input type="text"
        class="form-control"
        id="Phone"
        name="Phone"
        placeholder="" value="@Model.Phone">*@
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                    @Html.ValidationMessage("Phone")
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit"
                            class="btn btn-primary">
                        <i class="fa fa-save" style="margin-right:10px"></i> Lưu dữ liệu
                    </button>
                    <a href="~/shipper" class="btn btn-default">
                        <i class="fa fa-ban" style="margin-right:10px"></i> Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer">

    </div>
</div>
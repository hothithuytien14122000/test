@model SV18T1021314.DomainModel.Shipper
@{
    ViewBag.Title = "Delete";
}

<div class="box box-primary">
    <div class="box-header with-border">
    </div>
    <div class=" box-body">
        <form class="form-horizontal" action="~/Shipper/Delete/@Model.ShipperID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên người giao hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ShipperName</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Số điện thoại:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Phone</p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @if (SV18T1021314.BusinessLayer.CommonDataService.InUsedShipper(Model.ShipperID))
                    {
                        <p class="text-danger">
                            Không xóa được khách hàng này
                        </p>
                    }
                    else
                    {
                        <button type="submit"
                                class="btn btn-danger">
                            <i class="fa fa-trash" style="margin-right:10px"></i> Đồng ý xóa
                        </button>
                    }
                   
                    <a href="~/shipper" class="btn btn-default">
                        <i class="fa fa-ban" style="margin-right:10px"></i> Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer">

    </div>
</div>




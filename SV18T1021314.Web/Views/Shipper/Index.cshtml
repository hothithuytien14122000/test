@model SV18T1021314.Web.Models.ShipperPaginationResult
@{
    ViewBag.Title = "Người Giao Hàng";
}

<div class="box box-primary">
    <div class="box-header with-border">
    </div>
    <div class="box-body">
        <form action="/shipper" method="get">
            <div class="input-group">
                <input type="text" name="searchValue"
                       class="form-control"
                       placeholder="Nhập tên hoặc địa chỉ cần tìm" value="@Model.SearchValue" autofocus>

                <span class="input-group-btn">
                    <button type="submit"
                            id="search-btn"
                            class="btn btn-info">
                        <i class="fa fa-search"></i>
                    </button>
                    <a href="~/shipper/create" class="btn btn-flat btn-primary"
                       style="margin-left:5px;">
                        <i class="fa fa-plus" style="margin-right:5px"></i> Bổ sung
                    </a>
                </span>
            </div>
        </form>
        <p style="padding-top:10px">
            Có <strong>@Model.RowCount</strong> người giao hàng trong tổng số <strong>@Model.PageCount</strong> trang
        </p>
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped table-hover">
                <thead>
                    <tr class="bg-primary">
                        <th>  Tên người giao hàng </th>
                        <th> Số điện thoại</th>
                        <th style="width:70px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Data)
                    {
                        <tr>
                            <td>@item.ShipperName</td>
                            <td>@item.Phone</td>
                            <td>
                                <a href="~/shipper/edit/@item.ShipperID" class="btn btn-xs btn-info">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/shipper/delete/@item.ShipperID" class="btn btn-xs  btn-info" style="background-color:red">
                                    <i class="fa fa-remove"></i>
                                </a>
                            </td>
                        </tr>

                    }

                </tbody>
            </table>
        </div>
    </div>
    <!-- /.box-body -->
    <div class="box-footer">
        <div class="text-center">
            <ul class="pagination">
                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    if (i == Model.Page)
                    {
                        <li class="active"><a href="#">@i</a></li>
                    }
                    else
                    {
                        <li><a href="~/shipper?page=@i&searchValue=@Model.SearchValue">@i</a></li>
                    }
                }
            </ul>
        </div>
    </div>
    <!-- /.box-footer-->
</div>




@model SV18T1021314.DomainModel.Category
@{
    ViewBag.Title = "Xóa thông tin loại hàng";
}

<div class="box box-primary">
    <div class="box-header with-border">
    </div>
    <div class=" box-body">
        <form class="form-horizontal" action="~/Category/Delete/@Model.CategoryID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên loại hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.CategoryName</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Description</p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @if (SV18T1021314.BusinessLayer.CommonDataService.InUsedCategory(Model.CategoryID))
                    {
                        <p class="text-danger">
                            Không xóa được khách hàng này
                        </p>
                    }
                    else
                    {
                        <button type="submit"
                                class="btn btn-danger">
                            <i class="fa fa-trash" style="margin-right:10px"></i> Đồng ý xóa
                        </button>
                    }
                    <a href="~/category" class="btn btn-default">
                        <i class="fa fa-ban" style="margin-right:10px"></i> Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer">

    </div>
</div>



